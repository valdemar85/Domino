<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/game_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>

    <EditText
            android:id="@+id/player_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_list"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/divider"
            android:hint="Введите свое имя"
            android:enabled="true"
            android:textColor="#000"/>

    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/player_name_input"
            android:textColor="#FF0000"/>

    <Button
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/error_message"
            android:text="Новая игра"/>

    <Button
            android:id="@+id/cancel_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_game_button"
            android:text="Отменить игру"
            android:visibility="gone"/>

    <Button
            android:id="@+id/start_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cancel_game_button"
            android:text="Начать игру"
            android:visibility="gone"/>

</RelativeLayout>

